<!DOCTYPE html>
<html>
  <head>
    <title>CommunityCapper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="link_cont">

      <% if current_user %>

        <%= link_to "New Matchup", new_matchup_path, class: 'link_tabs'  %>
        <%= link_to "Matchups", matchups_path, class: 'link_tabs'  %>
        <%= link_to "List", matchup_list_path, class: 'link_tabs'  %>
        <%= link_to "ABOUT SITE", about_welcome_path, class: 'link_tabs'  %>
        <%= link_to "My Profile", users_profile_path, class: 'link_tabs'  %>
        <%= link_to "LOG OUT", destroy_user_session_path, method: :delete %>

      <% end %>

      <% if !current_user %>
        
        <div class="nav_links"> <%= link_to "Sign Up", new_user_registration_path, class: 'link_tabs'  %></div>
        <div class="nav_links"> <%= link_to "Sign In", new_user_session_path, class: 'link_tabs'  %></div>

       </div>

       <% end %>

    

   

  <%= yield %>
  </body>
</html>


