<% @my_date %>
<% self.get_time %>

<div>CREATE A MATCHUP</div>

<%= form_for @matchup do |m| %>
			
	<div>Date: <%= m.text_field :date, value: @my_date %></div>
	<div>Sport: <%= m.text_field :sport %></div>
	<div>Favorite: <%= m.text_field :fav %></div>
	<div>Underdog: <%= m.text_field :dog %></div>
	<div>Fav_field: <%= m.text_field :fav_field %></div>
	<div>Dog_field: <%= m.text_field :dog_field %></div>
	<div>Spread: <%= m.text_field :spread %></div>
	<div>Fav_ML: <%= m.text_field :fav_ml %></div>
	<div>Dog_ML: <%= m.text_field :dog_ml %></div>
	<div>Total: <%= m.text_field :total %></div>
	<div>Game_Type: <%= m.text_field :game_type %></div>
	<div>Field_Type: <%= m.text_field :field_type %></div>
	<div>Road_Start_Time: <%= m.text_field :road_start_time %></div>
	<div>Home_Start_Time: <%= m.text_field :home_start_time %></div>
	<div>Weather: <%= m.text_field :weather %></div>
	<div>Home_D: <%= m.text_field :home_d %></div>
	<div>Home_O: <%= m.text_field :home_o %></div>
	<div>Road_D: <%= m.text_field :road_d %></div>
	<div>Road_O: <%= m.text_field :road_o %></div>
	<div>Home_Pitcher: <%= m.text_field :home_pitcher %></div>
	<div>Away_Pitcher: <%= m.text_field :away_pitcher %></div>
	<div>Home_Score: <%= m.text_field :home_score %></div>
	<div>Road_Score: <%= m.text_field :road_score %></div>
	<div>Winner: <%= m.text_field :winner %></div>
	
	<div><%= m.submit %></div>
			

<% end %>


